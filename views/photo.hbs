{{> header}}
<div id="detailContent">
  <div id="details">
{{mainPhoto.author}}
  {{mainPhoto.link}}
  <div class="imgs" style="background-image: url({{mainPhoto.link}}); height: 400px; width: 500px;"></div>
  {{mainPhoto.description}}
  </div>
  <div id="preview">

    {{#each photos}}
      <div class="image">
        <a href ="/gallery/{{id}}"><div class="img" style="background-image: url({{link}}); height: 200px; width: 300px;"></div></a>
        <div class="author">{{author}}</div>
        <div class="link">{{link}}</div>
      </div>
      <br>
    {{/each}}
  </div>
  <br>
  <br>
  <a href="/gallery/{{id}}/edit">EDIT photo</a>
</div>
